<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/fundo_lista_selecionado" android:state_checked="true"/>
    <item android:drawable="@color/fundo_lista_selecionado" android:state_selected="true"/>
    <item android:drawable="@color/fundo_lista_selecionado" android:state_activated="true"/>
    <item android:drawable="@color/fundo_lista" android:state_checked="false"/>

    <item
        android:state_selected="false"
        android:state_pressed="false"
        android:drawable="@color/fundo_lista" />

    <item android:state_pressed="true"
        android:drawable="@color/fundo_lista_selecionado" />

    <item android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@color/fundo_lista_selecionado" />
</selector>