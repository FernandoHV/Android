<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle" >
        <corners
            android:radius="5dp"
            />
        <solid
            android:color="#E4E4E4"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />

    </shape>
</item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#c0c0c0"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

        </shape>
    </item>

</selector>