<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.foodmaster.fernandoh.foodmaster.LoginActivity"
    android:background="@drawable/gradiente_fundo">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgLogoLogin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:cropToPadding="false"
        android:focusable="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/imgLogoLogin">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/txtLoginEmail"
            android:text="email@emailteste.com"
            android:inputType="textEmailAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint=" Email"
            android:background="#e8e7e7"
            android:autoText="false"
            tools:targetApi="jelly_bean_mr1"
            android:password="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/txtLoginSenha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textPassword"
            android:layout_below="@+id/txtLoginEmail"
            android:hint=" Senha"
            android:layout_marginTop="15dp"
            android:background="#e8e7e7"
            tools:targetApi="jelly_bean_mr1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/btLogin"
            android:layout_below="@+id/txtLoginSenha"
            android:layout_alignRight="@+id/txtLoginSenha"
            android:layout_alignEnd="@+id/txtLoginSenha"
            android:background="@drawable/botao_tipo1"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:id="@+id/button"
        android:background="@drawable/botao_tipo1"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
